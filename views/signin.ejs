<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Login â€¢ Digital Bulletin Board</title>
  <link rel="stylesheet" href="/css/signin.css" />
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
</head>
<body>
  <div class="overlay"></div>

  <!-- Login Card -->
  <div class="login-card">
    <div class="icon">
      <img src="/assets/user.png" alt="Login Icon">
    </div>
    <h2>Welcome Back</h2>
    <p>Sign in to access your account</p>

    <% if (typeof message !== 'undefined' && message) { %>
  <p style="color:crimson"><%= message %></p>
<% } %>



    <!-- Toggle Buttons -->
    <div class="role-toggle">
      <button class="role-btn active" data-role="student">ğŸ‘¨â€ğŸ“ Student</button>
      <button class="role-btn" data-role="admin">ğŸ›¡ï¸ Admin</button>
    </div>

    <!-- Form -->
    <form id="loginForm" method="post" action="/signin">
      <input type="hidden" id="roleField" name="role" value="student">
      <div class="input-group">
        <label id="label-username" for="username">Roll Number</label>
        <input type="text" id="username" name="username" placeholder="Enter your roll number" required>
      </div>
      <div class="input-group">
        <label id="label-password" for="password">Password</label>
        <input type="password" id="password" name="password" placeholder="Enter your password" required>
      </div>

      <div class="extras">
        <a href="#">Forgot Password?</a>
        <a href="#">Contact Support</a>
      </div>

      <button type="submit" class="btn-login">ğŸ‘¨â€ğŸ“ Login as Student</button>
    </form>
  </div>

<script>
  const roleButtons = document.querySelectorAll('.role-btn');
  const loginButton = document.querySelector('.btn-login');
  const usernameField = document.getElementById('username');
  const passwordField = document.getElementById('password');
  const labelUsername = document.getElementById('label-username');
  const labelPassword = document.getElementById('label-password');
  const roleField = document.getElementById('roleField');
  const form = document.getElementById('loginForm');

  let currentRole = "student";

  roleButtons.forEach(btn => {
    btn.addEventListener('click', () => {
      roleButtons.forEach(b => b.classList.remove('active'));
      btn.classList.add('active');
      currentRole = btn.dataset.role;
      roleField.value = currentRole;

      if (currentRole === 'admin') {
        labelUsername.textContent = "Admin Username";
        usernameField.placeholder = "Enter admin username";
        labelPassword.textContent = "Admin Password";
        passwordField.placeholder = "Enter admin password";
        loginButton.textContent = "ğŸ›¡ Login as Admin";
      } else {
        labelUsername.textContent = "Roll Number";
        usernameField.placeholder = "Enter your roll number";
        labelPassword.textContent = "Password";
        passwordField.placeholder = "Enter your password";
        loginButton.textContent = "ğŸ‘¨â€ğŸ“ Login as Student";
      }
    });
  });
</script>
</body>
</html>

